{
    "app-id": "io.github.Mozinho85.DeckSend",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "decksend",
    "modules": [
        {
            "name": "decksend",
            "buildsystem": "simple",
            "build-commands": [
                "cmake ..",
                "make",
                "install -D steamdeck_sender /app/bin/decksend",
                "install -Dm644 ../io.github.Mozinho85.DeckSend.desktop /app/share/applications/io.github.Mozinho85.DeckSend.desktop"
            ],
            "sources": [
                { "type": "dir", "path": ".." }
            ]
        }
    ]
}
