{
    "app-id": "io.github.Mozinho85.DeckSend",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "decksend",
    "modules": [
        {
            "name": "libevdev",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.freedesktop.org/software/libevdev/libevdev-1.13.1.tar.xz",
                    "sha256": "b2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2e2"
                }
            ]
        },
        {
            "name": "decksend",
            "buildsystem": "simple",
            "build-commands": [
                "cmake .",
                "make",
                "install -D steamdeck_sender /app/bin/decksend",
                "install -Dm644 io.github.Mozinho85.DeckSend.desktop /app/share/applications/io.github.Mozinho85.DeckSend.desktop"
            ],
            "sources": [
                { "type": "dir", "path": "." }
            ]
        }
    ]
}
